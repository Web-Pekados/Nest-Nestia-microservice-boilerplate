{
  "name": "nest-nestia-microservice-boilerplate",
  "repository": {
    "type": "git",
    "url": "https://github.com/Web-Pekados/Nest-Nestia-microservice-boilerplate"
  },
  "version": "1.0.0",
  "description": "",
  "author": "",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.26.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@prisma/engines",
      "@scarf/scarf",
      "prisma",
      "unrs-resolver"
    ]
  },
  "scripts": {
    "build": "nest build",
    "build:swagger": "pnpm dlx nestia swagger",
    "format": "prettier --write \"src/**/*.ts\" \"prisma/generated/**/*.ts\" \"nestia-api/**/*.ts\" \"sdk-package/api/lib/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/bin/single",
    "start:prod:cluster": "node dist/src/bin/cluster",
    "lint": "eslint \"{src,apps,libs,test,nestia-api}/**/*.ts\" --fix && pnpm run lint:deps",
    "lint:deps": "depcruise src --config dependency-cruiser.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:nestia": "pnpm exec nestia e2e",
    "prisma:format": "prisma format",
    "prisma:generate": "prisma generate",
    "prisma:create": "prisma migrate dev --create-only",
    "prisma:dev": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:down": "prisma migrate diff --from-schema-datamodel prisma/schema.prisma --to-schema-datasource prisma/schema.prisma --script > down.sql",
    "prisma:seed": "prisma db seed",
    "prepare": "ts-patch install && typia patch && husky",
    "bench:get": "h2load --h1 -n 300000 -c 50 -m 30 \"http://localhost:7000/?text=123&num=0\"",
    "bench:post": "h2load --h1 -n 300000 -c 50 -m 30 -d test/bench.body.json -H 'Content-Type: application/json' \"http://localhost:7000/\"",
    "bench:get:cluster": "h2load --h1 -n 5000000 -c 50 -m 30 -t 5 \"http://localhost:7000/?text=123&num=0\"",
    "bench:post:cluster": "h2load --h1 -n 5000000 -c 50 -m 30 -t 5 -d test/bench.body.json -H 'Content-Type: application/json' \"http://localhost:7000/\"",
    "postinstall": "[ -n \"$CI\" ] || (pnpm run prisma:generate && prettier --write \"prisma/generated/**/*.ts\")",
    "update": "pnpm dlx npm-check-updates",
    "update:run": "pnpm dlx npm-check-updates -u && pnpm install",
    "sdk:build": "cd sdk-package/api && pnpm run build",
    "sdk:build:hard": "cd sdk-package/api && pnpm run build:hard",
    "sdk:push": "cd sdk-package/api && pnpm run deploy",
    "sdk:push:major": "cd sdk-package/api && pnpm run deploy:major",
    "sdk:update": "cd sdk-package/api && pnpm run update",
    "sdk:update:run": "cd sdk-package/api && pnpm run update:run"
  },
  "dependencies": {
    "@fastify/static": "^8.3.0",
    "@nestia/core": "^9.1.1",
    "@nestia/e2e": "^9.1.1",
    "@nestia/fetcher": "^9.1.1",
    "@nestia/sdk": "^9.1.1",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.1.9",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.9",
    "@nestjs/cqrs": "^11.0.3",
    "@nestjs/platform-fastify": "^11.1.9",
    "@nestjs/schedule": "^6.1.0",
    "@nestjs/swagger": "^11.2.3",
    "@nestjs/terminus": "^11.0.0",
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "fastify-metrics": "^12.1.0",
    "husky": "^9.1.7",
    "jexl": "^2.3.0",
    "joi": "^18.0.2",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-loki": "^3.0.0",
    "pino-pretty": "^13.1.3",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "tgrid": "^1.2.0",
    "ts-patch": "^3.3.0",
    "typia": "^10.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@nestia/benchmark": "^9.1.1",
    "@nestjs/cli": "^11.0.14",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.9",
    "@types/jest": "^30.0.0",
    "@types/jexl": "^2.3.4",
    "@types/node": "^25",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "dependency-cruiser": "^17.3.4",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "nestia": "^9.1.1",
    "prettier": "^3.7.4",
    "prisma": "^7.1.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.9.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}